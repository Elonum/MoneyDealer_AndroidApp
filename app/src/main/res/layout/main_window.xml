<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".MainWindow">

    <!-- Верхняя панель -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/welcome_orange"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Меню (бургер) -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:tint="@android:color/white" />

        <!-- Название счета и стрелка -->
        <TextView
            android:id="@+id/accountName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Основной счет ▼"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Переключатель "Расходы/Доходы" -->
    <LinearLayout
        android:id="@+id/tabSwitcher"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#393939"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <Button
            android:id="@+id/btnExpenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Расходы"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/rounded_orange_button" />

        <Button
            android:id="@+id/btnIncome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Доходы"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="#393939" />
    </LinearLayout>

    <!-- Блок с суммой и кольцом -->
    <LinearLayout
        android:id="@+id/summaryBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#393939"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addButton">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 000 Р"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_gravity="center" />

        <!-- Здесь будет кастомное View для кольца -->
        <View
            android:id="@+id/ringChart"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Кнопка "Добавить" -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Добавить +"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/rounded_orange_button"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/summaryBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Переключатель "Неделя/Месяц/Год" -->
    <LinearLayout
        android:id="@+id/periodSwitcher"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#393939"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Неделя"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="#393939" />

        <Button
            android:id="@+id/btnMontn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Месяц"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/rounded_orange_button" />

        <Button
            android:id="@+id/btnYear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Год"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="#393939" />
    </LinearLayout>

    <!-- Кнопка "История" -->
    <Button
        android:id="@+id/historyButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="История"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/rounded_orange_button"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>